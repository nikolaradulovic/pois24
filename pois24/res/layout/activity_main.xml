<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/pozadina"
    android:padding="15dp"
    android:weightSum="4"
    tools:context="com.example.pois24.MainActivity"
    tools:ignore="MergeRootFrame" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="20dp" >

            <Button
                android:id="@+id/btnSat"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/slika4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnPoruka"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/slika1" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="20dp" >

            <Button
                android:id="@+id/btnStetoskop"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/slika3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnPoziv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/slika2" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:gravity="center" >

        <Button
            android:id="@+id/btnPodesavanja"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:text="@string/podesavanja"
            android:textColor="@color/White"
            android:textAllCaps="true"
            android:textSize="36sp"
            android:textStyle="bold"
             />
    </TableRow>

</TableLayout>