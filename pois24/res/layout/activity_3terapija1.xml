<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/pozadina1"
    android:orientation="vertical"
    android:weightSum="22" >

    <TextView
        android:id="@+id/txtNazivUjutru"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/ujutru"
        android:textSize="25sp"
        android:textStyle="bold" />

     <TextView
        android:id="@+id/txtSpisakLekova"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="left"
        android:text="Spisak lekova:"
        android:textSize="20sp"
        android:textStyle="bold" />

     <EditText
         android:id="@+id/editSpisak"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="3"
         android:maxLines="4"
         android:ems="10"
         android:inputType="textMultiLine" >

         <requestFocus />
     </EditText>

    <Spinner
        android:id="@+id/combo_kada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:entries="@array/spinnerVreme1" />

    <Spinner
        android:id="@+id/combo_koliko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:entries="@array/spinnerKolicina" />

    <TextView
        android:id="@+id/terapijaAct"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:gravity="left"
        android:text="Aktivna:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        
        android:id="@+id/chbAktivna"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Trenutno aktivna?" 
        android:textColor="@color/white"
        android:textStyle="bold"/>
    

    <Button
        android:id="@+id/btnSacuvajBroj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        android:hint="Sačuvaj željeni broj"
        android:text="SAČUVAJ"
        android:textColor="@color/White"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNazadPodesavanja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        android:hint="Sačuvaj željeni broj"
        android:text="NAZAD"
        android:textColor="@color/White"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>