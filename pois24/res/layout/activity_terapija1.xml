<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/pozadina1"
    android:weightSum="31"
    >

    <TextView
        android:id="@+id/terapijaNaziv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:gravity="center"
        android:text="NAZIV LEKA:"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_weight="1"
        
         />

    <EditText
        android:id="@+id/unesiTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10sp"
        android:textColorHint="@color/FloralWhite"
        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:hint="@string/hint_unos"
        android:layout_weight="1">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/terapijaInt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Na koliko:" 
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:gravity="left"
        android:textSize="20sp"
        android:layout_weight="3"/>

    <Spinner
        android:id="@+id/combo_kada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spinner1Items"
        android:layout_weight="6" />
    
     <TextView
        android:id="@+id/terapijaKolicina"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Kolicina:" 
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:gravity="left"
        android:textSize="20sp"
        android:layout_weight="3"/>
     
     <Spinner
        android:id="@+id/combo_koliko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spinner2Items"
        android:layout_weight="6" />
     
     <TextView
        android:id="@+id/terapijaAct"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Aktivna:"
        android:textStyle="bold" 
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:gravity="left"
        android:textSize="20sp"
        android:layout_weight="3"/>

     <CheckBox
         android:id="@+id/chbAktivna"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="6"
         android:text="CheckBox" />
     
      <Button
        android:id="@+id/btnSacuvajBroj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:background="@drawable/rectangle1"
        android:hint="Sačuvaj željeni broj"
        android:text="SAČUVAJ"
        android:textSize="30sp"
        android:textStyle="bold" />
    
     <Button
        android:id="@+id/btnNazadPodesavanja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:background="@drawable/rectangle1"
        android:hint="Sačuvaj željeni broj"
        android:text="NAZAD"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>
