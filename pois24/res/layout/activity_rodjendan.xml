<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pois24.RodjendanActivity"
    android:orientation="vertical"
    android:background="@drawable/pozadina1" 
    android:weightSum="19">

    <TextView
        android:id="@+id/txtRodjendanTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="RODJENDANI"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="4" />
    <TextView
        android:id="@+id/txtIme"
        android:layout_marginTop="10sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:text="IME : " />

    <EditText
        android:id="@+id/editUnosIme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="20"
        android:inputType="textPersonName" >  
    </EditText>
    
    <TextView
        android:id="@+id/txtPrezime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:text="PREZIME: " />

    <EditText
        android:id="@+id/editUnosPrezime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ems="20"
        android:inputType="textPersonName" >
    </EditText>
    
    <TextView
        android:id="@+id/txtIzaberiDatum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="10sp"
        android:text="IZABERITE DATUM: " />

    <DatePicker
        android:id="@+id/RodjendanDatum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_weight="5" />

    
<Button
        android:id="@+id/btnSacuvajBroj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:background="@drawable/rectangle1"
        android:hint="Sačuvaj željeni broj"
        android:text="SAČUVAJ"
        android:textSize="30sp"
        android:textStyle="bold" />
    
     <Button
        android:id="@+id/btnNazadRodjendan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:background="@drawable/rectangle1"
        android:hint="Sačuvaj željeni broj"
        android:text="NAZAD"
        android:textSize="30sp"
        android:textStyle="bold" />
</LinearLayout>