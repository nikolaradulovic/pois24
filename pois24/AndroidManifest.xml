<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pois24"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/slika22"
        android:label="@string/appName"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.pois24.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Sat.SatActivity"
            android:label="@string/title_activity_sat" >
            <intent-filter>
                <action android:name="com.example.pois24.SAT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Poruka.PorukaActivity"
            android:label="@string/title_activity_poruka" >
            <intent-filter>
                <action android:name="com.example.pois24.PORUKA" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Poruka.SendPorukuX"
            android:label="@string/title_activity_poruka" >
            <intent-filter>
                <action android:name="com.example.pois24.PORUKAX" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Stetoskop.StetoskopActivity"
            android:label="@string/title_activity_stetoskop" >
            <intent-filter>
                <action android:name="com.example.pois24.STETOSKOP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Stetoskop.TerapijaActivity"
            android:label="@string/title_activity_terapija1" >
            <intent-filter>
                <action android:name="com.example.pois24.TERAPIJA1" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.PodesavanjaActivity"
            android:label="@string/title_activity_podesavanja" >
            <intent-filter>
                <action android:name="com.example.pois24.PODESAVANJA" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Sat.RodjendanActivity"
            android:label="@string/title_activity_rodjendan" >
            <intent-filter>
                <action android:name="com.example.pois24.RODJENDAN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Sat.PodaciActivity"
            android:label="@string/title_activity_lista" >
            <intent-filter>
                <action android:name="com.example.pois24.podaci" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Sat.PodaciRodjendanActivity"
            android:label="@string/title_activity_listaR" >
            <intent-filter>
                <action android:name="com.example.pois24.podaciRodj" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Sat.PodaciTVprogramActivity"
            android:label="@string/title_activity_listaTV" >
            <intent-filter>
                <action android:name="com.example.pois24.podaciTV" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Sat.TvProgramActivity"
            android:label="@string/title_activity_tv_program" >
            <intent-filter>
                <action android:name="com.example.pois24.TVPROGRAM" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pois24.Sat.PreglediActivity"
            android:label="@string/title_activity_pregledi" >
            <intent-filter>
                <action android:name="com.example.pois24.PREGLEDI" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.example.pois24.Stetoskop.AlarmReceiverTerapija"> 
            <intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
        </receiver>
    </application>

</manifest>